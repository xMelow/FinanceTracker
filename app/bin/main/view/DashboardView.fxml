<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import financetracker.controller.TransactionController?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="financetracker.controller.TransactionController">
    <center>
        <HBox spacing="10" alignment="CENTER">

            <!-- Add Transaction Section -->
            <VBox spacing="10">
                <Label text="Add Transaction" style="-fx-font-weight: bold;"/>
                <TextField fx:id="amountField" promptText="Amount"/>
                <ComboBox fx:id="categoryComboBox"/>
                <TextField fx:id="descriptionField" promptText="Description"/>
                <Button text="Add" fx:id="addButton" onAction="#addTransaction"/>
            </VBox>
            
            <!-- Totals Section -->
            <VBox spacing="10">
                <Label text="Totals" style="-fx-font-weight: bold;"/>
                <Label text="Total spend amount:"/>
                <Label fx:id="totalAmountLabel" text="0.00"/>
                <Label text="Spending per category:"/>
                <ListView fx:id="spendingCategoryList"/>
            </VBox>
            
            <!-- Recent Transactions Section -->
            <VBox spacing="10">
                <Label text="Recent Added Transactions" style="-fx-font-weight: bold;"/>
                <TableView fx:id="transactionTableView">
                    <columns>
                        <TableColumn text="Description" fx:id="descriptionColumn"/>
                        <TableColumn text="Amount" fx:id="amountColumn" />
                        <TableColumn text="Category" fx:id="categoryColumn" />
                    </columns>
                </TableView>
                <Button text="Sort Transactions" fx:id="sortButton"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>

