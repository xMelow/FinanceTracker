<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TabPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="financetracker.controller.TransactionController">

    <padding>
        <Insets top="0" right="20" bottom="20" left="20"/>
    </padding>

    <Tab text="Dashboard" closable="false">
        <fx:include fx:id="transactionView" source="TransactionView.fxml"/>
    </Tab>

    <Tab text="Charts" closable="false">
        <VBox spacing="10" alignment="CENTER">
            <Label text="Charts will come here"/>
        </VBox>
    </Tab>

    <Tab text="Settings" closable="false">
        <VBox spacing="10" alignment="CENTER">
            <Label text="Settings will go here"/>
        </VBox>
    </Tab>
</TabPane>
